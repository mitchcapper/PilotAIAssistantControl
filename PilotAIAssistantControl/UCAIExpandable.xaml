<UserControl x:Class="PilotAIAssistantControl.UCAIExpandable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PilotAIAssistantControl"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

	<Expander x:Name="InternalExpander"
	          Style="{DynamicResource Acc}"
	          Foreground="{x:Static SystemColors.AccentColorBrush}"
	          VerticalAlignment="Stretch"
	          VerticalContentAlignment="Top"
	          HorizontalContentAlignment="Stretch"
	          IsExpanded="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
	          ExpandDirection="{Binding ExpandDirection, RelativeSource={RelativeSource AncestorType=UserControl}}"
	          Header="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"
	          Expanded="InternalExpander_Expanded"
	          Collapsed="InternalExpander_Collapsed">
		<local:UCAI x:Name="InternalAiControl"
		            Visibility="{Binding IsExpanded, Mode=OneWay, ElementName=InternalExpander, Converter={StaticResource boolNullVisibilityCollapsedConverter}}" />
	</Expander>

</UserControl>
