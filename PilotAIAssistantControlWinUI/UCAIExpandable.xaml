<UserControl x:Class="PilotAIAssistantControl.UCAIExpandable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:PilotAIAssistantControl"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

	<local:FauxExpander x:Name="InternalExpander"
	                    Foreground="{ThemeResource SystemAccentColor}"
	                    VerticalAlignment="Stretch"
	                    HorizontalAlignment="Stretch"
	                    IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
	                    ExpandDirection="{x:Bind ExpandDirection, Mode=OneWay}"
	                    Header="{x:Bind Header, Mode=OneWay}"
	                    Expanding="InternalExpander_Expanded"
	                    Collapsed="InternalExpander_Collapsed">
		<local:FauxExpander.FauxContent>
			<local:UCAI x:Name="InternalAiControl" />
		</local:FauxExpander.FauxContent>
	</local:FauxExpander>

</UserControl>
