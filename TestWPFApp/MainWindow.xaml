<Window x:Class="TestWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pia="clr-namespace:PilotAIAssistantControl;assembly=PilotAIAssistantControl" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="AiColumn" Width="Auto"/>
			<ColumnDefinition Width="5"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- AI Expandable Control -->
		<pia:UCAIExpandable x:Name="ucAiExpandable"
		                    Grid.Column="0"
		                    TargetColumn="{Binding ElementName=AiColumn}"
		                    DefaultSize="400"
		                    MinExpandedSize="200"
		                    CollapsedSize="40"/>


		<GridSplitter x:Name="aiSplitter" Grid.Column="1"
		              Visibility="{Binding AiControl.Visibility, Mode=OneWay, ElementName=ucAiExpandable}"
		              IsTabStop="False"
		              HorizontalAlignment="Stretch"
		              VerticalAlignment="Stretch"
		              Background="#E0E0E0"
		              ResizeBehavior="PreviousAndNext" />

		<!-- Main Content -->
		<Grid Margin="0 1 0 0" Grid.Column="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="100" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<TextBox Name="txtRegex" Margin="10" />
			<TextBox Margin="10" Name="txtTest" Grid.Row="1">

			</TextBox>
		</Grid>
	</Grid>
</Window>
